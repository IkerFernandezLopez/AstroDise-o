---
export interface Props {
	title: string;
	date: string;
	content: string;
}

const { title, date, content } = Astro.props;
---

<div>
	<h1 id="title">{title}</h1>
	<p id="date">Published on {date}</p>
	<p id="content">{content}</p>
</div>

<style>
	#title {
		font-size: 23px;
		font-weight: 700;
	}
	#date {
		font-size: 14px;
		color: gray;
		font-family: Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace;
		margin-top: -5px;
	}
	#content {
		font-size: 16px;
		font-weight: 500;
		color: rgb(89, 89, 89);
		line-height: 1.2;
		margin-top: -1px;
	}
</style>
